@using NewsWebsite.ViewModels.Settings
@using NewsWebsite.Services.Contracts
@inject IWritableOptions<SiteSettings> options
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="@options.Value.SiteInfo.MetaDescriptionTag">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <!-- Title -->
    <title>@options.Value.SiteInfo.Title</title>
    <!-- Favicon -->
    <link rel="icon" href="/assets/img/@options.Value.SiteInfo.Favicon">

    <!-- Stylesheet -->
    <link href="~/CacheFiles/css/style.css" rel="stylesheet" />
    <script src="~/assets/vendor/jquery/dist/jquery-2.2.4.min.js"></script>
    <script src="~/CacheFiles/js/Ajax.js"></script>
    <!-- Sweetalert2 -->
    <link href="~/CacheFiles/lib/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/CacheFiles/lib/sweetalert2/dist/sweetalert2.min.js"></script>
    <!-- preloader -->
    <link href="~/CacheFiles/lib/Loading/css/preloader.css" rel="stylesheet" />
    <script src="~/CacheFiles/lib/Loading/js/jquery.preloader.min.js"></script>
</head>

<body>
    <div id="modal-placeholder"></div>
    <!-- Preloader -->
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="lds-ellipsis">
            <div></div>
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>

    <!-- ##### Header Area Start ##### -->
    <header class="header-area">
        <!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6">
                        <!-- Breaking News Widget -->
                        @await Component.InvokeAsync("LatestNewsTitleList")
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="top-meta-data d-flex align-items-center justify-content-end">
                            <!-- Top Social Info -->
                            <div class="top-social-info">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                                <a href="#"><i class="fa fa-youtube-play"></i></a>
                            </div>
                            <!-- Top Search Area -->
                            <div class="top-search-area">
                                <form asp-action="Search" asp-controller="Home" method="post">
                                    <input type="search" name="searchText" id="topSearch" placeholder="جستجو ...">
                                    <button type="submit" class="btn"><i class="fa fa-search" aria-hidden="true"></i></button>
                                </form>
                            </div>
                            <!-- Login -->
                            @await Html.PartialAsync("_UserLogin")
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Navbar Area -->
        <div class="vizew-main-menu" id="sticker">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="vizewNav">
                        <!-- Nav brand -->
                        <a href="/home/index" class="nav-brand"><img src="/assets/img/@options.Value.SiteInfo.Logo" alt="" height="90">@options.Value.SiteInfo.Title</a>
                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <div class="classy-menu">
                            <!-- Close Button -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>
                            <!-- Nav Start -->
                            @await Component.InvokeAsync("CategoryList")
                            <!-- Nav End -->
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ##### Header Area End ##### -->
    @RenderBody()
    <!-- ##### Footer Area Start ##### -->
    <footer class="footer-area">
        <div class="container">
            <div class="row">
                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-xl-3">
                    <div class="footer-widget mb-70">
                        <!-- Logo -->
                        <a href="/Home/Index" class="foo-logo d-block mb-4"><img src="/assets/img/@options.Value.SiteInfo.Logo" alt="" height="80"></a>
                        <p>@options.Value.SiteInfo.Description<p>
                            <!-- Footer Newsletter Area -->
                    </div>
                </div>

                <!-- Random Videos -->
                @await Component.InvokeAsync("RandomVideosList", 2)

                <!-- Random News -->
                @await Component.InvokeAsync("RandomNewsList", 2)

                <!-- Footer Widget Area -->
                <div class="col-12 col-sm-6 col-xl-3">
                    <div class="footer-widget mb-70">
                        <h6 class="widget-title">اطلاعات تماس</h6>
                        <!-- Contact Address -->
                        <div class="contact-address">
                            <p>تهران ، خیابان ولیعصر</p>
                            <p>موبایل و تلگرام 09398730453</p>
                            <p>آدرس ایمیل: amirhosseinlakzaei2000@gmail.com</p>
                        </div>
                        <!-- Footer Social Area -->
                        <div class="footer-social-area">
                            <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>
                            <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                            <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="linkedin"><i class="fa fa-linkedin"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Copywrite Area -->
        <div class="copywrite-area">
            <div class="container">
                <div class="row align-items-center">
                    <!-- Copywrite Text -->
                    <div class="col-12 col-sm-6">
                        <!--<p class="copywrite-text">-->
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        <!--Copyright &copy  <a href="https://mizfa.academy" target="_blank">Mizfa.academy</a>-->
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        <!--</p>-->
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area End ##### -->
    <!-- ##### All Javascript Script ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="~/assets/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/CacheFiles/js/plugins.js"></script>
    <script src="~/CacheFiles/js/active.js"></script>
</body>
</html>
