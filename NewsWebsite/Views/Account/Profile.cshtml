@model NewsWebsite.ViewModels.Account.UserPanelViewModel
@using NewsWebsite.Entities.identity.Enums;
@using NewsWebsite.ViewModels.Manage
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .nav-tabs {
        background-color: #fff !important;
        padding: 8px 0px !important;
    }

    h4, h3 {
        font-family: "Vazir_Medium",tahoma, sans-serif !important;
        font-weight: 100 !important;
    }

    h4 {
        font-size: 16px !important;
    }

    h3 {
        font-size: 18px !important;
    }
</style>

<div class="container mt-5 mb-5 border">
    <div id="user-profile-2" class="user-profile p-4">
        <div class="tabbable">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a class="active show" data-toggle="tab" href="#profile">
                        <i class="ace-icon fa fa-user"></i>
                        پروفایل
                    </a>
                </li>

                <li>
                    <a data-toggle="tab" href="#bookmarks">
                        <i class="ace-icon fa fa-bookmark"></i>
                        اخبار بوکمارک
                    </a>
                </li>

                <li>
                    <a data-toggle="tab" href="#changePassword">
                        <i class=" ace-icon fa fa-key"></i>
                        تغییر کلمه عبور
                    </a>
                </li>
            </ul>

            <div class="tab-content mt-4">
                <div id="profile" class="tab-pane in active">
                    <div class="row">
                        <form asp-action="Profile" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                            <input type="hidden" asp-for="User.Id" />
                            <div class="row mt-2 mb-2">
                                <div class="col-md-4 border-left">
                                    <div class="col-md-12 border-bottom text-center">
                                        <p>
                                            تصویر پروفایل
                                        </p>
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="height: 150px;">
                                                @if (Model.User.Image != null)
                                                {
                                                    <input type="hidden" asp-for="User.Image" value="@Model.User.Image" />
                                                    <img src="~/avatars/@Model.User.Image" />
                                                }
                                                else
                                                {
                                                    <img src="~/assets/img/UserPic.png" />
                                                }
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                            <div>
                                                <span class="btn default btn-file">
                                                    <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                                    <span class="fileinput-exists btn btn-default"> تغییر عکس </span>
                                                    <input type="file" asp-for="User.ImageFile" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                                </span>
                                                <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                            </div>
                                            <span asp-validation-for="User.ImageFile" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.UserName" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <input asp-for="User.UserName" class="form-control" />
                                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.Email" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <input asp-for="User.Email" class="form-control" />
                                            <span asp-validation-for="User.Email" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.FirstName" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <input asp-for="User.FirstName" class="form-control" />
                                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.LastName" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <input asp-for="User.LastName" class="form-control" />
                                            <span asp-validation-for="User.LastName" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.Gender" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="row">
                                                <div class="col-md-4 custom-control custom-radio mb-3">
                                                    <input asp-for="User.Gender" value="@GenderType.male" class="custom-control-input" id="customRadio1" type="radio">
                                                    <label class="custom-control-label" for="customRadio1">مرد</label>
                                                </div>
                                                <div class="col-md-4 custom-control custom-radio mb-3">
                                                    <input asp-for="User.Gender" value="@GenderType.famale" class="custom-control-input" id="customRadio2" type="radio">
                                                    <label class="custom-control-label" for="customRadio2">زن</label>
                                                </div>
                                            </div>
                                            <span asp-validation-for="User.Gender" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.PhoneNumber" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <input asp-for="User.PhoneNumber" class="form-control" />
                                            <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.Bio" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <textarea asp-for="User.Bio" class="form-control" />
                                            <span asp-validation-for="User.Bio" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-3">
                                            <label asp-for="User.PersianBirthDate" class="control-label"></label>
                                        </div>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text cursor-pointer" id="BirthDate">
                                                        <i class="fa fa-calendar"></i>
                                                    </span>
                                                </div>
                                                <input asp-for="User.PersianBirthDate" class="form-control" id="InputBirthDate" style="direction:ltr" />

                                            </div>
                                        </div>

                                        <span asp-validation-for="User.PersianBirthDate" class="text-danger"></span>
                                    </div>
                                    @*<script>
                                        $("#BirthDate").MdPersianDateTimePicker({
                                            targetTextSelector: "#InputBirthDate",
                                            placement: 'top',
                                        });
                                    </script>*@
                                </div>
                            </div>
                            <p>hello world</p>
                        </form>

                    </div>
                </div>
                <div id="bookmarks" class="tab-pane">
                    @await Html.PartialAsync("_Bookmarks", Model.Bookmarks)
                </div>
                <div id="changePassword" class="tab-pane">
                    @await Html.PartialAsync("_ChangePassword", new ChangePasswordViewModel())
                </div>
            </div>
        </div>
    </div>
</div>
