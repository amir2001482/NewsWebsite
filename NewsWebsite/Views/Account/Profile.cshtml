@*@model NewsWebsite.ViewModels.Account.UserPanelViewModel*@
@model NewsWebsite.ViewModels.Manage.ProfileViewModel
@using NewsWebsite.Entities.identity.Enums;
@using NewsWebsite.ViewModels.Manage
@using NewsWebsite.Common
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/lib/bootstrap.datetimepicker/css/jquery.md.bootstrap.datetimepicker.style.css" rel="stylesheet" />
<script src="~/lib/bootstrap.datetimepicker/js/jquery.md.bootstrap.datetimepicker.js"></script>

<link href="~/css/bootstrap-fileinput.css" rel="stylesheet" />
<script src="~/js/bootstrap-fileinput.min.js"></script>


<script src="~/CacheFiles/js/Ajax.js"></script>
<link href="~/CacheFiles/lib/Loading/css/preloader.css" rel="stylesheet" />
<script src="~/CacheFiles/lib/Loading/js/jquery.preloader.min.js"></script>
<style>
    .nav-tabs {
        background-color: #fff !important;
        padding: 8px 0px !important;
    }

    h4, h3 {
        font-family: "Vazir_Medium",tahoma, sans-serif !important;
        font-weight: 100 !important;
    }

    h4 {
        font-size: 16px !important;
    }

    h3 {
        font-size: 18px !important;
    }
</style>
<div id="modal-placeholder">

</div>
<div class="container mt-5 mb-5 border">
    <div id="user-profile-2" class="user-profile p-4">
        <div class="tabbable">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a class="active show" data-toggle="tab" href="#profile">
                        <i class="ace-icon fa fa-user"></i>
                        پروفایل
                    </a>
                </li>

                <li>
                    <a data-toggle="tab" href="#bookmarks">
                        <i class="ace-icon fa fa-bookmark"></i>
                        اخبار بوکمارک
                    </a>
                </li>

                <li>
                    <a data-toggle="tab" href="#changePassword">
                        <i class=" ace-icon fa fa-key"></i>
                        تغییر کلمه عبور
                    </a>
                </li>
            </ul>
            <div class="tab-content mt-4">
                <div id="profile" class="tab-pane in active">
                    <div class="row">
                        <div class="col-12">
                            <form asp-controller="Account" asp-action="EditProfile" enctype="multipart/form-data" method="post">
                                <input type="hidden" asp-for="Id" />
                                <div class="row">
                                    <div class="col-4">
                                        <div class="fileinput fileinput-new" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail" style="height: 150px;">
                                                @if (Model.Image != null)
                                                {
                                                    <img src="~/avatars/@Model.Image" />
                                                }
                                                else
                                                {
                                                    <img src="~/assets/img/UserPic.png" />
                                                }
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail" style="height:200px"> </div>
                                            <div>
                                                <span class="btn default btn-file">
                                                    <span class="fileinput-new btn btn-success"> انتخاب کنید </span>
                                                    <span class="fileinput-exists btn btn-default"> تغییر عکس </span>
                                                    <input type="file" asp-for="ImageFile" accept=".jpg, .png, .jpeg, .gif, .tif, .tiff, .JPG" />
                                                </span>
                                                <a href="javascript:;" class="btn btn-danger fileinput-exists" data-dismiss="fileinput"> حذف </a>
                                            </div>
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="btn btn-sm btn-block btn-success mt-2">
                                            <i class="ace-icon fa fa-edit"></i>
                                            <span>ویرایش پروفایل</span>
                                        </button>
                                    </div>
                                    <div class="col-8">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="FirstName" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input asp-for="FirstName" class="form-control" />
                                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="LastName" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input asp-for="LastName" class="form-control" />
                                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="UserName" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input asp-for="UserName" class="form-control" />
                                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="Email" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input asp-for="Email" class="form-control" />
                                                        <span asp-validation-for="Email" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="PhoneNumber" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <input asp-for="PhoneNumber" class="form-control" />
                                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="PersianBirthDate" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text cursor-pointer" id="BirthDate">
                                                                    <i class="fa fa-calendar"></i>
                                                                </span>
                                                            </div>
                                                            <input type="datetime" asp-for="PersianBirthDate" class="form-control" id="InputBirthDate" style="direction:ltr" />
                                                        </div>
                                                    </div>
                                                    <span asp-validation-for="PersianBirthDate" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="profile-user-info">
                                                    <div class="col-md-12">
                                                        <label asp-for="Gender" class="control-label"></label>
                                                    </div>
                                                    <div class="col-12 mr-3">
                                                        <div class="row">
                                                            <div class="col-md-4 custom-control custom-radio mb-3">
                                                                <input asp-for="Gender" value="@GenderType.male" class="custom-control-input" id="customRadio1" type="radio">
                                                                <label class="custom-control-label" for="customRadio1">مرد</label>
                                                            </div>
                                                            <div class="col-md-4 custom-control custom-radio mb-3">
                                                                <input asp-for="Gender" value="@GenderType.famale" class="custom-control-input" id="customRadio2" type="radio">
                                                                <label class="custom-control-label" for="customRadio2">زن</label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="profile-info-row">
                                                    <div class="col-md-12">
                                                        <label asp-for="Bio" class="control-label"></label>
                                                    </div>
                                                    <div class="col-md-12">
                                                        <textarea style="height:100px; width:142%;" asp-for="Bio" class="form-control"></textarea>
                                                        <span asp-validation-for="Bio" class="text-danger"></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="hr hr-8 dotted"></div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="bookmarks" class="tab-pane">
                    @await Html.PartialAsync("_Bookmarks",Model.BookmarkNews)
                </div>
                <div id="changePassword" class="tab-pane">
                    @await Html.PartialAsync("_ChangePassword", new ChangePasswordViewModel())
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $("#BirthDate").MdPersianDateTimePicker({
        targetTextSelector: "#InputBirthDate",
        placement: 'top',
    });
</script>